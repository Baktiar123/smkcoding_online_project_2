<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data Pasien di Indonesia"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:id="@+id/textNegara"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearNegara"
            android:layout_below="@id/textNegara">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/txtPositif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Positive"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txtDirawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sufferer"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txtSembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recovered"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txtMeninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dead"
                android:textSize="16sp"/>
    </LinearLayout>
